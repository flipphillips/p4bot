{
  "name": "p4bot (devcontainer)",
  "dockerComposeFile": [
    "../Docker/docker-compose.dev.yml"
  ],
  "service": "p4bot",
  "workspaceFolder": "/srv/p4bot",
  "forwardPorts": [
    8080
  ],
  "mounts": [
    "source=${localWorkspaceFolder},target=/srv/p4bot,type=bind,consistency=cached"
  ],
  "remoteUser": "root",
  "shutdownAction": "stopCompose",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.vscode-pylance",
        "ms-python.python"
      ]
    }
  }
}