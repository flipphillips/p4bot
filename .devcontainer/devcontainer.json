{
  "name": "p4bot (devcontainer)",
  "dockerComposeFile": [
    "../Docker/docker-compose.dev.yml"
  ],
  "service": "p4bot",
  "workspaceFolder": "/srv/p4bot",
  "forwardPorts": [
    8080
  ],
  "mounts": [
    "source=${localEnv:SSH_AUTH_SOCK},target=/ssh-agent,type=bind,consistency=cached",
    "source=${localWorkspaceFolder}/app,target=/srv/p4bot/app,type=bind,consistency=cached",
    "source=${localWorkspaceFolder}/scripts,target=/scripts,type=bind,consistency=cached"
  ],
  "remoteEnv": {
    "SSH_AUTH_SOCK": "/ssh-agent",
    "P4_SCRIPT_ROOT": "/scripts"
  },
  "postStartCommand": "/scripts/login.sh || true",
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.shell.linux": "/bin/bash",
        "python.defaultInterpreterPath": "/opt/venv/bin/python"
      },
      "extensions": [
        "ms-python.python"
      ]
    }
  },
  "remoteUser": "root",
  "shutdownAction": "stopCompose"
}