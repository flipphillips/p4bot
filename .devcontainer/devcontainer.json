{
  "name": "p4bot (devcontainer)",
  "dockerComposeFile": [
    "../Docker/docker-compose.yml"
  ],
  "service": "p4bot",
  "workspaceFolder": "/srv/p4bot",
  "forwardPorts": [
    8080
  ],
  "postCreateCommand": "python3 -m venv .venv && . .venv/bin/activate && pip install --upgrade pip && pip install --no-cache-dir -r requirements.txt P4Python && deactivate",
  "postStartCommand": "/scripts/login.sh || true",
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.shell.linux": "/bin/bash",
        "python.defaultInterpreterPath": "/srv/p4bot/.venv/bin/python"
      },
      "extensions": [
        "ms-python.python"
      ]
    }
  },
  "remoteUser": "root",
  "shutdownAction": "stopCompose"
}