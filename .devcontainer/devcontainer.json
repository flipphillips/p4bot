{
  "name": "p4bot (devcontainer)",
  "dockerComposeFile": [
    "../Docker/docker-compose.yml"
  ],
  "service": "p4bot",
  "workspaceFolder": "/srv/p4bot",
  "forwardPorts": [
    8080
  ],
  "postStartCommand": "/scripts/login.sh || true",
  "postCreateCommand": "pip install --no-cache-dir P4Python || true",
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
      },
      "extensions": [
        "ms-python.python"
      ]
    }
  },
  "remoteUser": "root",
  "shutdownAction": "stopCompose"
}